# Banco de dados
# Para Docker Compose (usar 'db' como host):
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/ml_db
# Para desenvolvimento local (usar 'localhost' como host):
# DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/ml_db
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=sua-senha-forte-aqui

# Mercado Libre OAuth2
ML_CLIENT_ID=YOUR_ML_CLIENT_ID
ML_CLIENT_SECRET=YOUR_ML_CLIENT_SECRET
ML_REDIRECT_URI=http://localhost:8000/api/oauth/callback
ML_AUTH_URL=https://auth.mercadolibre.com.br/authorization
ML_TOKEN_URL=https://api.mercadolibre.com/oauth/token
ML_API_URL=https://api.mercadolibre.com
ML_SITE_ID=MLB
ML_SCOPES=offline_access read write
ML_USE_PKCE=true
PKCE_CODE_CHALLENGE_METHOD=S256

# Segurança JWT
SECRET_KEY=replace-with-strong-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# URLs da aplicação
APP_BASE_URL=http://localhost:8000
FRONTEND_ORIGIN=http://localhost:3000

# Ambiente
ENV=development

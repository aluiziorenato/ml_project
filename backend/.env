# =============================================================================
# backend/.env  — Configurações principais
# =============================================================================

# -----------------------------
# Banco de dados
# -----------------------------
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/ml_db

ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=senha_forte_123

# -----------------------------
# Mercado Livre OAuth
# -----------------------------
ML_CLIENT_ID=6377568852501213
ML_CLIENT_SECRET=0btHWQ64AT8dTOLQUmTYAOeAgJE3POB0

# URI de redirect (EXATAMENTE como no painel ML — sem barra extra, sem parâmetros)
ML_REDIRECT_URI=https://meubackend.com/api/oauth/callback

# Endpoints do Mercado Livre
ML_AUTH_URL=https://auth.mercadolibre.com.br/authorization
ML_TOKEN_URL=https://api.mercadolibre.com/oauth/token
ML_SITE_ID=MLB

# Escopos (separados por espaço)
ML_SCOPES=offline_access read write

# PKCE (obrigatório no painel)
ML_USE_PKCE=true
PKCE_CODE_CHALLENGE_METHOD=S256

# -----------------------------
# URLs do app
# -----------------------------
# Domínio do SaaS (frontend público — Canva ou outro)
BASE_URL=https://aradvogados.my.canva.site
FRONTEND_ORIGIN=https://aradvogados.my.canva.site
BACKEND_PUBLIC_URL=https://meubackend.com
BACKEND_INTERNAL_URL=http://backend:8000

# -----------------------------
# Segurança / JWT
# -----------------------------
SECRET_KEY=replace_with_a_secure_random_hex
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------
# Runtime
# -----------------------------
ENV=production
SETUPTOOLS_USE_PKG_RESOURCES=false
